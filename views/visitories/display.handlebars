<div class="row">
  <div class="col s12 m3">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{visitory.user.firstName}} {{visitory.user.lastName}}</span>
        <img src="{{visitory.user.image}}" 
        class="circle responsive-img" style="width : 50%">
        {{!-- to resize the image of the user --}}
      </div>
      <div class="card-action">
        <a href="/visitories/user/{{visitory.user.id}}">
          {{visitory.user.firstName}}'s Visitories
        </a>
      </div>
    </div> 
  </div>
  
  <div class="col s12 m8">
    <h4>{{visitory.place}}</h4>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate visitory.date 'MMMM Do YYYY'}}</span>
        {{{visitory.body}}}
      </div>
    </div>
  </div>

  
</div>