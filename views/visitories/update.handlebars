<h5 align= " center"> <strong>Add Visitory</strong> </h5>
<div class="row">
  <form action="/visitories/{{visitory.id}}?_method=PUT" method="post" class="col s12">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="place" value = "{{visitory.place}}">
        <label for="place">Place</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <input type="text" name="city" value = "{{visitory.city}}">
        <label for="city">City</label>
        </div>     
    </div>

    <div class="row">
      <div class="input-field">
        <input type="text" name="state" value = "{{visitory.state}}">
        <label for="state">State</label>
        </div>     
    </div>

    <div class="row">
      <div class="input-field">
        Date: 
        <input type="date" name="date">
        
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status" value ="{{visitory.status}}">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="Progress">Progress</option>
          <option value="Draft">Draft</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>
        <input type="checkbox" name="commentAccept" class="filled-in" id="filled-in-box" checked="checked">
        <label for="filled-in-box">Allow Comments</label>
      </p>
    </div>

    <div class="row">
      <div class="input-field" >
        <h5><strong>Share your experience!</strong></h5>
        <textarea name="body">{{visitory.body}}</textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn" >
  </form>
</div>

